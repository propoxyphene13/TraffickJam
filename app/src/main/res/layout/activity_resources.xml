<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.traffickjamgeorgia.traffickjam.resources"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/traffickJamBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:contentDescription="@string/xmltxt_main_traffickJamBanner"
            android:src="@drawable/bannerimg"
            android:clickable="true"
            android:onClick="onBtnClick"
            />

        <TextView
            android:id="@+id/title_youth_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/youth_leaders"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/traffickncmec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:contentDescription="@string/NCMECimg"
            android:src="@drawable/ncmec"
            />

        <TextView
            android:id="@+id/NCMECmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/NCMEC_missionstatement"
            />

        <!-- Temporary button links to other activity pages -->
        <Button
            android:id="@+id/ncmecBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtnClick"

            android:text="@string/ncmec"/>

        <ImageView
            android:id="@+id/trafficknfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_gravity="center"
            android:contentDescription="@string/NFSimg"
            android:src="@drawable/nfs"
            />

        <TextView
            android:id="@+id/NFSmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/NFS_missionstatement"
            />

        <!-- Temporary button links to other activity pages -->
        <Button
            android:id="@+id/nfsBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtnClick"
            android:text="@string/nfs"/>

    </LinearLayout>
</ScrollView>