<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="com.traffickjamgeorgia.traffickjam.MainActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/traffickJamBanner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/xmltxt_main_traffickJamBanner"
            android:src="@drawable/bannerimg"
            />

        <TextView
            android:id="@+id/hotline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xmltxt_contact_hotlineText"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onHotlineClk"
        />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xmltxt_contact_hotlineNumText"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onNumClk"
            />
    <!-- Using a table just in case we need to stick arrows on either side of the text -->


    <!-- Old text views, moved to individual layout files with View Pager replacement

            <TextView
                android:id="@+id/missionStatementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/xmltxt_main_missionStatementTitle"
                />

            <TextView
                android:id="@+id/missionStatement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/xmltxt_main_missionStatement1"
                />
    -->

    <!--Use side-by-side in layout; here use pager

            <TextView
                android:id=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xmltxt_main_howCanYouHelp1"
                />

            <TextView
                android:id=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xmltxt_main_currentEvents"
                />
    -->
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:stretchColumns="*">
            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Temporary button links to other activity pages -->
                <Spinner
                    android:id="@+id/aboutus_spinner"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <!-- Temporary button links to other activity pages -->
                <Spinner
                    android:id="@+id/resources_spinner"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <!-- Temporary button links to other activity pages -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="blogClick"
                    android:text="@string/blog"/>

                <!-- Temporary button links to other activity pages -->
                <Spinner
                    android:id="@+id/more_spinner"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ViewFlipper
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:id="@+id/viewFlipper">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView"
                    android:src="@drawable/slideshow1"
                    android:contentDescription="@string/slide1" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView2"
                    android:src="@drawable/slideshow2"
                    android:contentDescription="@string/slide2"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView3"
                    android:src="@drawable/slideshow3"
                    android:contentDescription="@string/slide3"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView4"
                    android:src="@drawable/slideshow4"
                    android:contentDescription="@string/slide4"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView5"
                    android:src="@drawable/slideshow5"
                    android:contentDescription="@string/slide5"/>
            </ViewFlipper>
            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/next"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

